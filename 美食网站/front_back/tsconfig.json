{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                    
    "strict": true,                           
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir":"./dist/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      
    ]
  },
  "compileOnSave": true,
  "includes": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "models",
    "migrations",
    "seeders",
    "test"
  ]
}
